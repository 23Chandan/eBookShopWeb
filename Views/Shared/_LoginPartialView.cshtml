
    <style>
        

        .login-container {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .login-card {
            background-color: #343a40; /* Same as navbar */
            color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
            width: 400px;
            padding: 30px;
            margin-top:20vh;
        }

        .form-control {
            background: #495057;
            border: none;
            color: white;
        }

            .form-control:focus {
                background: #495057;
                color: white;
                box-shadow: none;
            }

        .btn-primary {
            background-color: #ffc107;
            border: none;
            color: #343a40;
        }

            .btn-primary:hover {
                background-color: #e0a800;
            }

        .login-card a {
            color: #ffc107;
        }

            .login-card a:hover {
                color: #e0a800;
            }
    </style>


    <!-- Login Form -->
    <div class="login-container">
        <div class="login-card">
        <input id="hdUserRole" type="hidden" value="@ViewData["Role"]" />
            <h3 class="text-center mb-4"><i class="fas fa-user-circle"></i> Login</h3>
            <form id="loginForm">
                <div class="mb-3">
                    <label class="form-label">Email Address</label>
                    <input type="email" class="form-control" id="email" required>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" required>
                </div>
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </form>
            <p class="text-center mt-3">
                Don't have an account? <a href="/Account/Register">Sign up</a>
            </p>
        </div>
    </div>


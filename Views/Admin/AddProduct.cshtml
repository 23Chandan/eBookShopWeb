@{
    ViewData["Title"] = "Add New Product";
}


<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Add New Product</h2>

        <form id="addProductForm" enctype="multipart/form-data">
            <div class="row">
                <!-- Title -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Title <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="title" name="Title" required>
                </div>

                <!-- Author -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Author <span class="text-danger">*</span></label>
                    <input type="text" class="form-control" id="author" name="Author" required>
                </div>

                <!-- Price -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Price <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="price" name="Price" required min="0.01" step="0.01">
                </div>

                <!-- Category -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Category <span class="text-danger">*</span></label>
                    <select class="form-control" id="category" name="Category" required>
                        <option value="">Select Category</option>
                        <option value="Fiction">Fiction</option>
                        <option value="Non-Fiction">Non-Fiction</option>
                        <option value="Science">Science</option>
                        <option value="Technology">Technology</option>
                    </select>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label">Language <span class="text-danger">*</span></label>
                    <select class="form-control selectpicker" id="language" name="Language" multiple data-live-search="true">
                        <option value="English">English</option>
                        <option value="Spanish">Spanish</option>
                        <option value="French">French</option>
                        <option value="German">German</option>
                    </select>
                </div>


                <!-- Stock Quantity -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Stock Quantity <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="stock" name="StockQuantity" required min="0">
                </div>

                <!-- Page Count -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Page Count <span class="text-danger">*</span></label>
                    <input type="number" class="form-control" id="pageCount" name="PageCount" required min="1">
                </div>

                <!-- Is Bestseller -->
                <div class="col-md-6 mb-3 d-flex align-items-center">
                    <input type="checkbox" class="form-check-input me-2" id="isBestSeller" name="IsBestSeller">
                    <label for="isBestSeller" class="form-label">Mark as Bestseller</label>
                </div>

                <!-- Description -->
                <div class="col-12 mb-3">
                    <label class="form-label">Description</label>
                    <textarea class="form-control" id="description" name="Description" rows="3"></textarea>
                </div>

                <!-- Product Image -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Product Image <span class="text-danger">*</span></label>
                    <input type="file" class="form-control" id="productImage" name="ProductImage" accept="image/*" required>
                    <img id="imagePreview" class="mt-2" style="max-width: 100px; display: none;">
                </div>

                <!-- Product PDF -->
                <div class="col-md-6 mb-3">
                    <label class="form-label">Product PDF <span class="text-danger">*</span></label>
                    <input type="file" class="form-control" id="productPdf" name="ProductPdf" accept=".pdf" required>
                </div>

            </div>

            <!-- Submit Button -->
            <div class="text-center mt-3">
                <button type="submit" class="btn btn-primary">Add Product</button>
            </div>
        </form>
    </div>
</div>

<!-- Toaster for Success Message -->
<div id="toastMessage" class="toast position-fixed top-50 start-50 translate-middle p-3 bg-success text-white" style="display:none;">
    Product added successfully!
</div>

